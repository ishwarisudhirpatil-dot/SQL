CREATE DATABASE BANKDB;
USE BANKDB;
CREATE TABLE ACCOUNTS(
    ACC_ID INT PRIMERY KEY,
    HOLDER_NAME VARCHAR(100),
    BALANCE DECIMAL(10,2)
);



INSERT INTO ACCOUNTS (ACC_ID,HOLDER_NAME ,BALANCE) VALUES
(1,'ROHIT SHARMA',5000.00),
(2,'VIRAT KOHLI',3000.00);

BEGIN TRANSACTION;
UPDATE ACCOUNTS SET BALANCE =BALANCE-1000 WHERE
ACC_ID =2;

UPDATE ACCOUNTS SET  BALANCE = BALANCE + 1000 WHERE 
ACC_ID= 2;

COMMIT;

BEGIN TRANSACTION ;

UPDATE ACCOUNTS SET BALANCE =BALANCE+ 500 WHERE
ACC_ID =1;
UPDATE ACCOUNTS SET BALANCE = BALANCE -500 WHERE 
ACC_ID=2;

ROLLBACK;